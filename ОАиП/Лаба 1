#include<iostream>;
using namespace std;
int main() {
	setlocale(LC_ALL, "RU");
	int array[10];
	for (int i = 0; i < 10; i++) {
		cout << "Введите " << i << " элемент:";
		cin >> array[i];
	}
	for (int i = 0; i < 10; i++){
		cout << "Элемент " << i << ":" << array[i] << endl;
	}
	
	int summa=0;
	int max=array[0];
	for (int i = 0; i < 10; i++) {
		summa += array[i];
		if (array[i] > max)
			max = array[i];
	}
	cout << "Сумма:" << summa << endl;
	cout << "Максимальный элемент:" << max<<endl;

	for (int u = 0; u < 9; u++) {
		for (int i =0; i < 10 ; i++) 
			if (array[i] < array[i + 1]) {
				int v = array[i];
				array[i] = array[i + 1];
				array[i + 1] = v;
			}
		}
	for (int i = 0; i < 10; i++) {
		cout << array[i] << ",";
	}

	return 0;
}

